{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},

	"formatter": {
		"enabled": true,
		"lineEnding": "lf",
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingComma": "all",
			"jsxQuoteStyle": "double"
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"lineEnding": "lf"
		}
	}
}
